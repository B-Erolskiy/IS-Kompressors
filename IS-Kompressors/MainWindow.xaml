<mah:MetroWindow x:Class="IS_Kompressors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:IS_Kompressors"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:DV="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:datavis="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        mc:Ignorable="d"
        xmlns:dxc="http://schemas.devexpress.com/winfx/xaml/charts"
        WindowState="Maximized"
        Title="ИС Компрессорное оборудование" 
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen" 
        >
    <Window.Resources>

        <DataTemplate x:Key="MenuItemTemplate" DataType="{x:Type mah:HamburgerMenuIconItem}">
            <Grid x:Name="RootGrid"
                      Height="40"
                      Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ContentControl Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="{Binding Icon}"
                                    Focusable="False"
                                    Foreground="White" />
                <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="White"
                               Text="{Binding Label}" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="DateTemplate1" >
            <TextBlock Text="{Binding date_aEquipment, 
               StringFormat={}{0:dd\.}{0:MM\.}{0:yyyy}}" 
               VerticalAlignment="Center" HorizontalAlignment="Center" />
        </DataTemplate>
        <DataTemplate x:Key="EditingDateTemplate1">
            <DatePicker SelectedDate="{Binding date_aEquipment, Mode=TwoWay,
     UpdateSourceTrigger=PropertyChanged}"  />
        </DataTemplate>
        <DataTemplate x:Key="DateTemplate2" >
            <TextBlock Text="{Binding date_aEquipment, 
               StringFormat={}{0:dd\.}{0:MM\.}{0:yyyy}}" 
               VerticalAlignment="Center" HorizontalAlignment="Center" />
        </DataTemplate>
        <DataTemplate x:Key="EditingDateTemplate2">
            <DatePicker SelectedDate="{Binding date_receipt, Mode=TwoWay,
     UpdateSourceTrigger=PropertyChanged}"  />
        </DataTemplate>
        <DataTemplate x:Key="DateTemplate3" >
            <TextBlock Text="{Binding date_aParts, 
               StringFormat={}{0:dd\.}{0:MM\.}{0:yyyy}}" 
               VerticalAlignment="Center" HorizontalAlignment="Center" />
        </DataTemplate>
        <DataTemplate x:Key="EditingDateTemplate3">
            <DatePicker SelectedDate="{Binding date_aParts, Mode=TwoWay,
     UpdateSourceTrigger=PropertyChanged}"  />
        </DataTemplate>

        <Style x:Key="DataGridCell" TargetType="DataGridCell">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Background" Value="#FF444444"/>
                    <Setter Property="BorderBrush" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LargeTileStyle" TargetType="mah:Tile">
            <Setter Property="Width" Value="500" />
            <Setter Property="Height" Value="255" />
            <Setter Property="TitleFontSize" Value="15" />

        </Style>

        <Style x:Key="SmallTileStyle" TargetType="mah:Tile">
            <Setter Property="Width" Value="247" />
            <Setter Property="Height" Value="175" />
            <Setter Property="TitleFontSize" Value="15" />
        </Style>

    </Window.Resources>
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Content="настройки" Click="tileSettings_Click" />
            <Button Click="tileAbout_Click" >
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                               
                   Height="20"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{iconPacks:Material Information}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   Text="о программе" />
                </StackPanel>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <Grid Background="White">
        <mah:HamburgerMenu x:Name="HamburgerMenuControl"
                        Foreground="White"
                        ItemTemplate="{StaticResource MenuItemTemplate}"
                        OptionsItemTemplate="{StaticResource MenuItemTemplate}"
                        PaneBackground="#FF444444"
                        DisplayMode="CompactInline"
                        ItemClick="HamburgerMenuControl_OnItemClick"
                        OptionsItemClick="HamburgerMenuControl_OnItemClick" OverridesDefaultStyle="True" SelectedIndex="0">
            <!--  Content  -->
            <mah:HamburgerMenu.ContentTemplate>

                <DataTemplate DataType="{x:Type mah:HamburgerMenuIconItem}">
                    <Grid x:Name="TheContentGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="56" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0"
                    Background="#FF444444">
                            <TextBlock x:Name="Header"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Foreground="White"
                            Text="{Binding Label}" />
                        </Border>
                        <ContentControl x:Name="TheContent"
                            Grid.Row="1"     
                            ScrollViewer.CanContentScroll="True"
                            Focusable="False"
                            Foreground="{DynamicResource BlackBrush}"
                            Content="{Binding Tag}" mah:ScrollViewerHelper.IsHorizontalScrollWheelEnabled="True" IsManipulationEnabled="True" />
                    </Grid>
                </DataTemplate>
            </mah:HamburgerMenu.ContentTemplate>
            <!--  Items  -->
            <mah:HamburgerMenu.ItemsSource>
                <mah:HamburgerMenuItemCollection>
                    <mah:HamburgerMenuIconItem Icon="{iconPacks:Material Home}" x:Name="menuMain" Label="Главная">

                        <mah:HamburgerMenuIconItem.Tag>
                            <Grid>
                                <WrapPanel Margin="30px" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <mah:Tile x:Name="tileEquipment" Style="{StaticResource LargeTileStyle}" Click="tileEquipment_Click" Title="Оборудование" >
                                        <iconPacks:Material Width="125" Height="125" Kind="Caravan"/>
                                    </mah:Tile>
                                    <mah:Tile x:Name="tileParts" Style="{StaticResource LargeTileStyle}" Click="tileParts_Click" Title="Запчасти" >
                                        <iconPacks:Material Width="125" Height="125" Kind="CarBattery"/>
                                    </mah:Tile>
                                    <mah:Tile x:Name="tileKlients" Style="{StaticResource SmallTileStyle}" Click="tileKlients_Click" VerticalAlignment="Bottom" Title="Производители" >
                                        <iconPacks:Material Width="75" Height="75" Kind="Account"/>
                                    </mah:Tile>
                                    <mah:Tile x:Name="tileCategories" Style="{StaticResource SmallTileStyle}" Click="tileCategories_Click" Title="Категории" >
                                        <iconPacks:Material Width="75" Height="75" Kind="BookMultipleVariant"/>
                                    </mah:Tile>
                                    <mah:Tile x:Name="tileDiagrams" Style="{StaticResource SmallTileStyle}" Click="tileDiagrams_Click" Title="Отчеты" >
                                        <iconPacks:Material Width="75" Height="75" Kind="ChartBar"/>
                                    </mah:Tile>
                                    <mah:Tile x:Name="tileSettings" Style="{StaticResource SmallTileStyle}" Click="tileSettings_Click" Title="Настройки" >
                                        <iconPacks:Material Width="75" Height="75" Kind="Settings"/>
                                    </mah:Tile>
                                </WrapPanel>
                            </Grid>
                        </mah:HamburgerMenuIconItem.Tag>
                    </mah:HamburgerMenuIconItem>

                    <mah:HamburgerMenuIconItem Icon="{iconPacks:Material 407}" x:Name="menuEquipment" Label="Оборудование" >

                        <mah:HamburgerMenuIconItem.Tag>
                            <mah:MetroAnimatedTabControl x:Name="tabControl" HorizontalAlignment="Left"  VerticalAlignment="Top">
                                <TabItem Header="Склад">
                                    <Grid x:Name="gridSklad" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="700px"/>
                                            <ColumnDefinition Width="500px"/>
                                        </Grid.ColumnDefinitions>
                                        <ToolBarTray Margin="30px" Background="White" Grid.Row="0" Grid.Column="0">
                                            <ToolBar>
                                                <Button Click="AddEquipment_Click" ToolTip="добавить оборудование">
                                                    <Image x:Name="imageEquipmentAdd" Width="50" />
                                                </Button>
                                                <Button Click="EditEquipment_Click" ToolTip="редактировать оборудование">
                                                    <Image x:Name="imageEquipmentEdit" Width="50" />
                                                </Button>
                                                <Button Click="DeleteEquipment_Click" ToolTip="удалить оборудование">
                                                    <Image x:Name="imageEquipmentDelete" Width="50"/>
                                                </Button>
                                                <Button Click="DownloadEquipment_Click" ToolTip="выгрузить таблицу оборудований в Excel">
                                                    <Image x:Name="imageEquipmentDownload" Width="50"/>
                                                </Button>
                                            </ToolBar>
                                        </ToolBarTray>
                                        <DataGrid Margin="30px" Name="dataGridEquipment"  
                                        ItemsSource="{Binding}"
                                        Grid.Row="1" Grid.Column="0"
                                        AutoGenerateColumns="False" 
                                        MaxHeight="350"
                                        HorizontalAlignment="Left"
                                        RowBackground="White"
                                        AlternatingRowBackground="WhiteSmoke"
                                        BorderBrush="Gray" 
                                        BorderThickness="2"  
                                        IsReadOnly="True" 
                                        RowHeight="25" 
                                        MaxWidth="650px"
                                        Cursor="Hand"
                                        VerticalAlignment="Top"
                                        CanUserAddRows="False" 
                                        CanUserDeleteRows="False" Background="{x:Null}" 
                                        SelectionChanged="dataGridEquipment_SelectionChanged">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn  CellStyle="{StaticResource DataGridCell}" Header="Название" 
	                    Binding="{Binding name_equipment, Mode=TwoWay, 
	                    UpdateSourceTrigger=PropertyChanged}"/>

                                                <DataGridTextColumn CellStyle="{StaticResource DataGridCell}" Header="Количество на складе" 
	                    Binding="{Binding col_equipment, Mode=TwoWay, 
	                    UpdateSourceTrigger=PropertyChanged}" />

                                                <DataGridTextColumn CellStyle="{StaticResource DataGridCell}" Header="Цена" 
	                    Binding="{Binding price_equipment, StringFormat={}{0:F2}, Mode=TwoWay, 
	                    UpdateSourceTrigger=PropertyChanged}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="3">
                                            <Label FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="30px" Content="Поиск"/>
                                            <ComboBox Name="searchEquipmentChoise"  Height="26" Width="205" SelectionChanged="searchEquipmentChoise_SelectionChanged">
                                                <ComboBoxItem Content="По артикулу"/>
                                                <ComboBoxItem Content="По названию"/>
                                                <ComboBoxItem Content="По производителю"/>
                                                <ComboBoxItem Content="По категории"/>
                                                <ComboBoxItem Content="По количеству на складе"/>
                                                <ComboBoxItem Content="По цене"/>
                                            </ComboBox>
                                            <WrapPanel Margin="147,15,0,0">
                                                <Grid>
                                                    <ComboBox 
                                                Name="searchEquipmentFabricator"
                                                DisplayMemberPath="name_fabricator"
                                                SelectedValuePath="id_fabricator"
                                                Width="205"
                                                Visibility="Hidden"
                                                Height="26" 
                                                SelectionChanged="searchEquipmentFabricator_SelectionChanged"/>
                                                    <ComboBox 
                                                Name="searchEquipmentCategories"
                                                DisplayMemberPath="name_category"
                                                SelectedValuePath="id_category"
                                                Width="205"
                                                Visibility="Hidden"
                                                Height="26" 
                                                SelectionChanged="searchEquipmentCategories_SelectionChanged"/>
                                                    <TextBox mah:TextBoxHelper.ClearTextButton="True" x:Name="searchEquipmentCode" Visibility="Hidden" Width="205" Height="26" TextChanged="searchEquipmentCode_TextChanged"/>
                                                    <TextBox mah:TextBoxHelper.ClearTextButton="True" x:Name="searchEquipmentName" Visibility="Hidden" Width="205" Height="26" TextChanged="searchEquipment_TextChanged"/>
                                                    <TextBox mah:TextBoxHelper.ClearTextButton="True" x:Name="searchEquipmentPrice" Visibility="Hidden" Width="205" Height="26" TextChanged="searchEquipmentPrice_TextChanged" PreviewTextInput="searchEquipmentPrice_PreviewTextInput"/>
                                                    <TextBox mah:TextBoxHelper.ClearTextButton="True" x:Name="searchEquipmentCol" Visibility="Hidden" Width="205" Height="26" TextChanged="searchEquipmentCol_TextChanged" PreviewTextInput="searchEquipmentCol_PreviewTextInput"/>
                                                </Grid>
                                            </WrapPanel>
                                            <Label FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="30px" Content="Информация об оборудовании"/>
                                            <!---->
                                                <ScrollViewer MaxHeight="240" VerticalScrollBarVisibility="Auto">
                                                <StackPanel>
                                                    <TextBlock TextWrapping="Wrap">
                                                        <Label x:Name="nameEquipmentLabel" FontWeight="DemiBold" FontSize="25px"/>
                                            <LineBreak/>
                                            <Label x:Name="codeEquipmentLabel"/>
                                            <LineBreak/>
                                            <Label x:Name="categoryEquipmentLabel"/>
                                            <LineBreak/>
                                            <Label x:Name="fabricatorEquipmentLabel"/>
                                            <LineBreak/>
                                            <StackPanel>
                                            <Label x:Name="descriptionEquipment" Visibility="Hidden" Content="Описание: "/>
                                            <TextBlock Margin="5px, 0, 0, 0" TextWrapping="Wrap" x:Name="descriptionEquipmentLabel"/>
                                            <Label x:Name="partsEquipment" Visibility="Hidden" Content="Запчасти к оборудованию на складе: "/>
                                            <TextBlock Margin="5px, 0, 0, 0" TextWrapping="Wrap" x:Name="partsEquipmentLabel"/>
                                             <Label x:Name="attributesEquipment" Visibility="Hidden" Content="Технические характеристики: "/>
                                            <TextBlock Margin="5px, 0, 0, 0" TextWrapping="Wrap" x:Name="attributesEquipmentLabel"/>
                                            </StackPanel>
                                                <Label FontSize="22px" x:Name="priceEquipmentLabel"/>
                                                <LineBreak/>
                                            <Label FontSize="22px" x:Name="colEquipmentLabel"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                </ScrollViewer>

                                                <Button Click="uploadEquipment_Click" Style="{StaticResource AccentedSquareButtonStyle}" IsEnabled="False" Content="скачать оборудование в Word" x:Name="uploadEquipment" HorizontalAlignment="Center" Height="50" Width="285" Margin="15"/>
                                                <Button Click="copyEquipment_Click" Style="{StaticResource SquareButtonStyle}" IsEnabled="False" HorizontalAlignment="Center" Content="скопировать информацию в буфер" x:Name="copyEquipment" Height="50" Width="285"/>

                                            </StackPanel>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Продажи">
                                    <Grid x:Name="gridSales" ScrollViewer.HorizontalScrollBarVisibility="Visible">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="800px"/>
                                            <ColumnDefinition Width="500px"/>
                                        </Grid.ColumnDefinitions>
                                        <ToolBarTray Margin="30px" Background="White" Grid.Row="0" Grid.Column="0">
                                            <ToolBar>
                                                <Button Click="EquipmentSalesAdd_Click" ToolTip="добавить продажу">
                                                    <Image x:Name="imageEquipmentSalesAdd" Width="50" />
                                                </Button>
                                                <Button Click="EquipmentSalesDelete_Click" ToolTip="удалить продажу">
                                                    <Image x:Name="imageEquipmentSalesDelete" Width="50"/>
                                                </Button>
                                                <Button ToolTip="выгрузить таблицу продаж в Excel">
                                                    <Image x:Name="imageEquipmentSalesDownload" Width="50"/>
                                                </Button>
                                            </ToolBar>
                                        </ToolBarTray>
                                        <DataGrid Margin="30px" Name="dataGridEquipmentSales"  
                                        ItemsSource="{Binding}"
                                        Grid.Row="1" Grid.Column="0"
                                        AutoGenerateColumns="False" 
                                        MaxHeight="400px"
                                        HorizontalAlignment="Left"
                                        RowBackground="White"
                                        AlternatingRowBackground="WhiteSmoke"
                                        BorderBrush="Gray" 
                                        BorderThickness="2"  
                                        IsReadOnly="True" 
                                        RowHeight="25" 
                                        MaxWidth="900px"
                                        Cursor="Hand"
                                        VerticalAlignment="Top"
                                        CanUserAddRows="False" 
                                        CanUserDeleteRows="False" SelectionChanged="dataGridEquipmentSales_SelectionChanged" Background="{x:Null}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn  CellStyle="{StaticResource DataGridCell}" Header="Номер" 
	                    Binding="{Binding id_aEquipment, Mode=TwoWay, 
	                    UpdateSourceTrigger=PropertyChanged}"/>

                                                <DataGridComboBoxColumn x:Name="equipmentSalesEq" CellStyle="{StaticResource DataGridCell}"  Header="Оборудование"
                        DisplayMemberPath="code_equipment"
                        SelectedValueBinding="{Binding Path=equipment_aEquipment, Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged}"
                        SelectedValuePath="id_equipment" />

                                                <DataGridTemplateColumn CellStyle="{StaticResource DataGridCell}" Header="Дата продажи" 
	                   CellTemplate="{StaticResource DateTemplate1}" 
                          CellEditingTemplate="{StaticResource EditingDateTemplate1}"/>
                                                
                                                <DataGridTextColumn CellStyle="{StaticResource DataGridCell}" Header="Количество" 
	                    Binding="{Binding col_aEquipment, Mode=TwoWay, 
	                    UpdateSourceTrigger=PropertyChanged}" />
                                                
                                                <DataGridTextColumn CellStyle="{StaticResource DataGridCell}" Header="Сумма продажи" 
	                    Binding="{Binding price_aEquipment, StringFormat={}{0:F2}, Mode=TwoWay, 
	                    UpdateSourceTrigger=PropertyChanged}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <StackPanel Grid.Column="2" Grid.Row="1" Grid.RowSpan="2">
                                        <Label FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="30px" Content="Информация о продаже"/>
                                                <!---->
                                            <ScrollViewer MaxHeight="240" VerticalScrollBarVisibility="Auto">
                                                <StackPanel>
                                                    <TextBlock TextWrapping="Wrap">
                                            <Label x:Name="personEquipmentSalesLabel" FontWeight="DemiBold" FontSize="22px"/>
                                            <LineBreak/>
                                            <Label x:Name="dateEquipmentSalesLabel"/>
                                            <LineBreak/>
                                            <Label x:Name="colEquipmentSalesLabel"/>
                                            <LineBreak/>
                                            <Label FontSize="22px" x:Name="equipmentEquipmentSalesLabel"/>
                                            <LineBreak/>
                                            <Label FontSize="22px" x:Name="priceEquipmentSalesLabel"/>
                                            <LineBreak/>
                                            <Label x:Name="pricePerEquipmentSalesLabel"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </ScrollViewer>

                                            <Button Click="uploadEquipment_Click" Style="{StaticResource AccentedSquareButtonStyle}" IsEnabled="False" Content="скачать оборудование в Word" x:Name="uploadEquipmentSales" HorizontalAlignment="Center" Height="50" Width="285" Margin="15"/>
                                            <Button Click="copyEquipment_Click" Style="{StaticResource SquareButtonStyle}" IsEnabled="False" HorizontalAlignment="Center" Content="скопировать информацию в буфер" x:Name="copyEquipmentSales" Height="50" Width="285"/>
                                        </StackPanel>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Поставки">
                                    <Grid x:Name="gridBuys" ScrollViewer.HorizontalScrollBarVisibility="Visible">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="800px"/>
                                            <ColumnDefinition Width="500px"/>
                                        </Grid.ColumnDefinitions>
                                        <ToolBarTray Margin="30px" Background="White" Grid.Row="0" Grid.Column="0">
                                            <ToolBar>
                                                <Button Click="EquipmentBuysAdd_Click" ToolTip="добавить поставку">
                                                    <Image x:Name="imageEquipmentBuysAdd" Width="50" />
                                                </Button>
                                                <Button Click="EquipmentBuysDelete_Click"  ToolTip="удалить поставку">
                                                    <Image x:Name="imageEquipmentBuysDelete" Width="50"/>
                                                </Button>
                                                <Button Click="EquipmentBuysDownload_Click" ToolTip="выгрузить таблицу поставок в Excel">
                                                    <Image x:Name="imageEquipmentBuysDownload" Width="50"/>
                                                </Button>
                                            </ToolBar>
                                        </ToolBarTray>
                                        <DataGrid Margin="30px" Name="dataGridEquipmentBuys"  
                                        ItemsSource="{Binding}"
                                        Grid.Row="1" Grid.Column="0"
                                        AutoGenerateColumns="False" 
                                        MaxHeight="450"
                                        HorizontalAlignment="Left"
                                        RowBackground="White"
                                        AlternatingRowBackground="WhiteSmoke"
                                        BorderBrush="Gray" 
                                        BorderThickness="2"  
                                        IsReadOnly="True" 
                                        RowHeight="25" 
                                        MaxWidth="900px"
                                        Cursor="Hand"
                                        VerticalAlignment="Top"
                                        CanUserAddRows="False" 
                                        CanUserDeleteRows="False" SelectionChanged="dataGridEquipmentBuys_SelectionChanged" Background="{x:Null}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn  CellStyle="{StaticResource DataGridCell}" Header="Номер" 
	                    Binding="{Binding id_aEquipment, Mode=TwoWay, 
	                    UpdateSourceTrigger=PropertyChanged}"/>

                                                <DataGridComboBoxColumn x:Name="equipmentBuysEq" CellStyle="{StaticResource DataGridCell}"  Header="Оборудование"
                        DisplayMemberPath="code_equipment"
                        SelectedValueBinding="{Binding Path=equipment_aEquipment, Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged}"
                        SelectedValuePath="id_equipment" />

                                                <DataGridTemplateColumn CellStyle="{StaticResource DataGridCell}" Header="Дата поставки" 
	                   CellTemplate="{StaticResource DateTemplate1}" 
                          CellEditingTemplate="{StaticResource EditingDateTemplate1}"/>

                                                <DataGridTextColumn CellStyle="{StaticResource DataGridCell}" Header="Количество" 
	                    Binding="{Binding col_aEquipment, Mode=TwoWay, 
	                    UpdateSourceTrigger=PropertyChanged}" />

                                                <DataGridTextColumn CellStyle="{StaticResource DataGridCell}" Header="Сумма поставки" 
	                    Binding="{Binding price_aEquipment, StringFormat={}{0:F2}, Mode=TwoWay, 
	                    UpdateSourceTrigger=PropertyChanged}" />
                                            </DataGrid.Columns>
                                        </DataGrid>

                                        <StackPanel Grid.Column="2" Grid.Row="1" Grid.RowSpan="2">
                                            <Label FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="30px" Content="Информация о поставке"/>
                                            <!---->
                                            <ScrollViewer MaxHeight="240" VerticalScrollBarVisibility="Auto">
                                                <StackPanel>
                                                    <TextBlock TextWrapping="Wrap">
                                                        <Label x:Name="personEquipmentBuysLabel" FontWeight="DemiBold" FontSize="22px"/>                                            <LineBreak/>
                                                        <Label x:Name="dateEquipmentBuysLabel"/>
                                                        <LineBreak/>
                                                        <Label x:Name="colEquipmentBuysLabel"/>
                                                        <LineBreak/>
                                                        <Label FontSize="22px" x:Name="equipmentEquipmentBuysLabel"/>
                                                        <LineBreak/>
                                                        <Label FontSize="22px" x:Name="priceEquipmentBuysLabel"/>
                                                        <LineBreak/>
                                                        <Label x:Name="pricePerEquipmentBuysLabel"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </ScrollViewer>

                                            <Button Click="uploadEquipment_Click" Style="{StaticResource AccentedSquareButtonStyle}" IsEnabled="False" Content="скачать оборудование в Word" x:Name="uploadEquipmentBuys" HorizontalAlignment="Center" Height="50" Width="285" Margin="15"/>
                                            <Button Click="copyEquipment_Click" Style="{StaticResource SquareButtonStyle}" IsEnabled="False" HorizontalAlignment="Center" Content="скопировать информацию в буфер" x:Name="copyEquipmentBuys" Height="50" Width="285"/>
                                        </StackPanel>
                                    </Grid>
                                </TabItem>
                            </mah:MetroAnimatedTabControl>
                        </mah:HamburgerMenuIconItem.Tag>
                    </mah:HamburgerMenuIconItem>

                    <mah:HamburgerMenuIconItem Icon="{iconPacks:Material 398}" x:Name="menuParts" Label="Запчасти">
                        <mah:HamburgerMenuIconItem.Tag>
                            <mah:MetroAnimatedTabControl x:Name="tabControlParts" HorizontalAlignment="Left"  VerticalAlignment="Top">
                                <TabItem Header="Склад">
                                    <Grid x:Name="gridSkladParts" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="700px"/>
                                            <ColumnDefinition Width="500px"/>
                                        </Grid.ColumnDefinitions>
                                            <ToolBarTray Margin="30px" Background="White" Grid.Row="0" Grid.Column="0">
                                                <ToolBar>
                                                    <Button Click="AddParts_Click" ToolTip="добавить оборудование">
                                                        <Image x:Name="imagePartsAdd" Width="50" />
                                                    </Button>
                                                <Button Click="EditParts_Click" ToolTip="редактировать оборудование">
                                                    <Image x:Name="imagePartsEdit" Width="50" />
                                                </Button>
                                                <Button Click="DeleteParts_Click" ToolTip="удалить оборудование">
                                                        <Image x:Name="imagePartsDelete" Width="50"/>
                                                    </Button>
                                                <Button Click="DownloadParts_Click" ToolTip="выгрузить таблицу оборудований в Excel">
                                                    <Image x:Name="imagePartsDownload" Width="50"/>
                                                </Button>
                                            </ToolBar>
                                            </ToolBarTray>
                                            <DataGrid Margin="30px" Name="dataGridParts"  
